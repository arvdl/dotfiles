set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Color theme
#

set notification-error-bg       "#dc322f" # Red
set notification-error-fg       "#D0D198" # Foreground
set notification-warning-bg     "#714a65" # Orange
set notification-warning-fg     "#3C425B" # Selection
set notification-bg             "#0F1015" # Background
set notification-fg             "#D0D198" # Foreground

set completion-bg               "#0F1015" # Background
set completion-fg               "#5c84ac" # Comment
set completion-group-bg         "#0F1015" # Background
set completion-group-fg         "#5c84ac" # Comment
set completion-highlight-bg     "#3C425B" # Selection
set completion-highlight-fg     "#D0D198" # Foreground

set index-bg                    "#0F1015" # Background
set index-fg                    "#D0D198" # Foreground
set index-active-bg             "#3C425B" # Current Line
set index-active-fg             "#D0D198" # Foreground

set inputbar-bg                 "#0F1015" # Background
set inputbar-fg                 "#D0D198" # Foreground
set statusbar-bg                "#0F1015" # Background
set statusbar-fg                "#D0D198" # Foreground

set highlight-color             "#714a65" # Orange
set highlight-active-color      "#EA55CF" # Pink

set default-bg                  "#0F1015" # Background
set default-fg                  "#D0D198" # Foreground

set render-loading              true
set render-loading-fg           "#0F1015" # Background
set render-loading-bg           "#D0D198" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#0F1015" # Background
set recolor-darkcolor           "#D0D198" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
